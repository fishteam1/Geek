<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pullRefresh_content"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="bottom">

        <RelativeLayout
            android:id="@+id/pullRefresh_reality_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pullRefresh_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/pull_refrrefh_header_default" />

            <!--<ProgressBar-->
            <!--android:id="@+id/pullRefresh_progressbar"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="12dp"-->
            <!--android:visibility="invisible" />-->
            <!--
               android:ellipsize="end"
                        android:maxLines="2"-->
            <TextView
                android:id="@+id/pullRefresh_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pullRefresh_arrow"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="游丝毛雕 : 汉代玉器中有一种阴刻细线，其线条形若游丝，细如毛发，后人称为“游丝毛雕”。"
                android:textColor="@color/mediumGrey_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pullRefresh_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pullRefresh_title"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:text="下拉刷新"
                android:textColor="@color/caesious_color"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray1_color" />

</LinearLayout>